log:
  level: INFO
accessLog: {}
api:
  dashboard: true # Recommended for local development; for production, secure dashboard access

entryPoints:
  http:
    address: ":80"
  https:
    address: ":443"

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false # Only expose containers with specific Traefik labels
    network: traefik-proxy # Connects Traefik to this network to discover services
  file:
    directory: /etc/traefik/dynamic_config
    watch: true # Watch for changes in the dynamic config directory

certificatesResolvers:
  letsencrypt:
    acme:
      email: "{{ traefik_acme_email }}" # Your email for Let's Encrypt notifications
      storage: "/etc/traefik/acme.json"
      httpChallenge:
        entryPoint: http