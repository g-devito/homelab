version: '3.8'

services:
  traefik:
    image: traefik:v2.11 # Using a specific, newer version is good practice
    container_name: traefik
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    networks:
      - traefik-proxy
    ports:
      - "80:80"
      - "443:443"
      # The dashboard port is not exposed directly for security
      # You will access it via a subdomain, e.g., traefik.gionet.eu/dashboard
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro # So Traefik can listen to Docker events
      - /etc/traefik/traefik.yml:/etc/traefik/traefik.yml:ro # The static configuration
      - /etc/traefik/acme.json:/etc/traefik/acme.json # For Let's Encrypt certificates
      - /etc/traefik/dynamic_config:/etc/traefik/dynamic_config:ro # For dynamic configuration files
      - /opt/homelab/traefik/logs:/var/log/traefik # To store Traefik logs
    labels:
      - "traefik.enable=true"
      # Dashboard as a service
      - "traefik.http.routers.traefik-dashboard.rule=Host(`traefik.gionet.eu`)"
      - "traefik.http.routers.traefik-dashboard.entrypoints=https"
      - "traefik.http.routers.traefik-dashboard.tls.certresolver=letsencrypt"
      - "traefik.http.routers.traefik-dashboard.service=api@internal"
      - "traefik.http.routers.traefik-dashboard.middlewares=traefik-auth@docker"
      # Basic auth middleware for the dashboard
      - "traefik.http.middlewares.traefik-auth.basicauth.users={{ traefik_dashboard_user }}:{{ traefik_dashboard_password | password_hash('bcrypt') }}"
      # Global HTTP to HTTPS redirection (middleware)
      - "traefik.http.middlewares.redirect-https.redirectscheme.scheme=https"
      - "traefik.http.middlewares.redirect-https.redirectscheme.permanent=true"
      # Apply redirect middleware to all HTTP routers
      - "traefik.http.routers.http-catchall.rule=HostRegexp(`{host:.+}`)" # Matches all hostnames
      - "traefik.http.routers.http-catchall.entrypoints=http"
      - "traefik.http.routers.http-catchall.middlewares=redirect-https"

networks:
  traefik-proxy:
    external: true # This network will be created by Ansible separately